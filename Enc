def rotenc():
 s=""
 j=None
 s=input("Enter ur string here to encrypt:")
 li=len(s)
 print(color.FAIL+"Encrypted string is:"+color.END,end="")
 time.sleep(4)
 while li!=0:
  for i in s:
   j=ord(i)
   if j>=97 and j<=109:
    j=j+13
    #print(color.FAIL+"Encrypted string is:"+color.END,end="")
    print(chr(j),end="") 
    li=li-1
   elif j>=110 and j<=122:
    j=j-13
    print(chr(j),end="")
    li=li-1

def rotdec():
 s=""
 s=input("Enter the encrypted string to decrypt it:")
 li=len(s)
