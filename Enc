def delay_print(s):
 for c in s:
  print(c,end="")
  sys.stdout.flush()
  time.sleep(0.1)
 
def bar():
 progress = progressbar.ProgressBar()
 for i in progress(range(25)):
    time.sleep(0.001)


delay_print("This Script Can Encrypt Ur Message In a Different Manner So That No Other Third Person Can Read It!")
bar()
